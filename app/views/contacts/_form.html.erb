              <%= form_tag @contacts, :remote => true, :id => 'contact-form', :class => 'contact-form' do %>
                <div class="contact-form-loader"></div>
                <fieldset>
                  <label class="name">
                    <input type="text" name="contact[title]" placeholder="Как обращаться к Вам:" value="" data-constraints="@Required @JustLetters"/>
                    <span class="empty-message">*Поле обязательно для заполнения.</span>
                    <span class="error-message">*Введите корректное имя.</span>
                  </label>              
                  
                  <label class="email">
                    <input type="text" name="contact[address]" placeholder="Ваш E-mail:" value="" data-constraints="@Required @Email"/>
                    
                    <span class="empty-message">*Поле обязательно для заполнения.</span>
                    <span class="error-message">*Неверный E-mail.</span>
                  </label>

                  <label class="phone">
                    <input type="text" name="contact[phone]" placeholder="Номер телефона:" value="" data-constraints="@JustNumbers"/>
              
                    <span class="empty-message">*Поле обязательно для заполнения.</span>
                    <span class="error-message">*Введите корректный номер телефона.</span>
                  </label>

                  <label class="message">
                    <textarea name="contact[description]" placeholder="Ваше сообщение" data-constraints='@Required @Length(min=20,max=999999)'></textarea>
              
                    <span class="empty-message">*Поле обязательно для заполнения.</span>
                    <span class="error-message">*Слишком короткое сообщение.</span>
                  </label>
              
                 <!--  <label class="recaptcha"> <span class="empty-message">*Поле обязательно для заполнения.</span> </label> -->
              
                  <div class="btn-wr text-primary">
                    <a class="btn btn-primary" href="#" data-type="submit" data-remote="true">ОТПРАВИТЬ</a>
                  </div>
                </fieldset>
                <div class="modal fade response-message">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                          &times;
                        </button>
                        <h4 class="modal-title">Поздравляем!</h4>
                      </div>
                      <div class="modal-body">
                        Наш сотрудник, вскором времени, свяжется с нами!
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>

